        // Resume form submission
        document.getElementById('resumeForm').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Resume posted successfully! It has been forwarded to all relevant advocates and firms across India based on your location and specialization preferences.');
            loadDashboardContent(); // Refresh dashboard to show updated stats
        });

        // Chat functionality
        function openChatModal(name, phone) {
            document.getElementById('chatModal').classList.remove('hidden');
            document.getElementById('chatTitle').textContent = Chat with ${name};
            document.getElementById('chatMessages').innerHTML = `
                <div class="text-center text-gray-500 text-sm mb-4">
                    Chat started with ${name}<br>
                    <span class="text-xs">All conversations are secure and confidential</span>
                </div>
            `;
        }

        function closeChatModal() {
            document.getElementById('chatModal').classList.add('hidden');
        }

        function sendMessage() {
            const input = document.getElementById('chatInput');
            const message = input.value.trim();
            
            if (message) {
                const messagesDiv = document.getElementById('chatMessages');
                messagesDiv.innerHTML += `
                    <div class="mb-2 text-right">
                        <div class="inline-block bg-blue-600 text-white px-3 py-2 rounded-lg text-sm max-w-xs">
                            ${message}
                        </div>
                        <div class="text-xs text-gray-500 mt-1">${new Date().toLocaleTimeString()}</div>
                    </div>
                `;
                input.value = '';
                messagesDiv.scrollTop = messagesDiv.scrollHeight;
                
                // Simulate response
                setTimeout(() => {
                    messagesDiv.innerHTML += `
                        <div class="mb-2">
                            <div class="inline-block bg-gray-200 text-gray-800 px-3 py-2 rounded-lg text-sm max-w-xs">
                                Thank you for your message. I'll review your case details and get back to you within 24 hours.
                            </div>
                            <div class="text-xs text-gray-500 mt-1">${new Date().toLocaleTimeString()}</div>
                        </div>
                    `;
                    messagesDiv.scrollTop = messagesDiv.scrollHeight;
                }, 1500);
            }
        }

        function makeCall(phone) {
            alert(Initiating call to ${phone || 'advocate'}.\n\nThis is a demo feature. In the actual platform, this would:\n• Connect you via secure VoIP\n• Record call for legal purposes\n• Provide call transcription\n• Bill consultation time automatically);
        }

        function scheduleCall() {
            alert('Call scheduling feature opened.\n\nIn the actual platform, you would be able to:\n• View advocate\'s available time slots\n• Book appointments with automatic reminders\n• Set up video consultations\n• Receive calendar invites');
        }

        function viewAct(title) {
            alert(Opening ${title}\n\nIn the actual platform, this would display:\n• Complete text of the act with section-wise navigation\n• Search functionality within the act\n• Bookmark important sections\n• Related case law references\n• Amendment history);
        }

        function viewCase(title) {
            alert(Opening case: ${title}\n\nIn the actual platform, this would show:\n• Complete case details and judgment\n• Case timeline and proceedings\n• Related cases and precedents\n• Legal principles established\n• Citation information);
        }

        function applyInternship(firm) {
            alert(Application submitted to ${firm}!\n\nYour resume has been forwarded to them along with:\n• Your specialization preferences\n• Expected stipend details\n• Availability information\n\nYou will receive updates on your dashboard.);
        }

        // Enter key support for chat
        document.getElementById('chatInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                sendMessage();
            }
        });

        // Initialize the page
        document.addEventListener('DOMContentLoaded', function() {
            // Set focus on user type dropdown
            document.getElementById('userType').focus();
        });
