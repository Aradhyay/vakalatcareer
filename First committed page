        // Login functionality
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const userType = document.getElementById('userType').value;
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            
            if (!userType || !email || !password) {
                alert('Please fill in all fields');
                return;
            }
            
            currentUser = {
                type: userType,
                email: email,
                name: email.split('@')[0]
            };
            
            document.getElementById('loginPage').classList.add('hidden');
            document.getElementById('mainDashboard').classList.remove('hidden');
            document.getElementById('userWelcome').textContent = Welcome, ${currentUser.name} (${currentUser.type});
            
            showSection('clientAdvocate');
            loadDashboardContent();
        });

        function logout() {
            currentUser = null;
            document.getElementById('mainDashboard').classList.add('hidden');
            document.getElementById('loginPage').classList.remove('hidden');
            document.getElementById('loginForm').reset();
        }

        function showSection(sectionName) {
            // Hide all sections
            document.querySelectorAll('.section').forEach(section => {
                section.classList.add('hidden');
            });
            
            // Show selected section
            document.getElementById(sectionName).classList.remove('hidden');
            currentSection = sectionName;
            
            // Load section-specific content
            if (sectionName === 'clientAdvocate') {
                loadAdvocates();
            } else if (sectionName === 'bareActs') {
                loadBareActs();
            } else if (sectionName === 'caseDatabase') {
                loadCases();
            } else if (sectionName === 'studentInternship') {
                loadInternships();
            }
        }

        function searchAdvocates() {
            const location = document.getElementById('locationFilter').value;
            const specialization = document.getElementById('specializationFilter').value;
            
            let filteredAdvocates = sampleAdvocates;
            
            if (location) {
                filteredAdvocates = filteredAdvocates.filter(adv => adv.location === location);
            }
            
            if (specialization) {
                filteredAdvocates = filteredAdvocates.filter(adv => adv.specialization === specialization);
            }
            
            displayAdvocates(filteredAdvocates);
        }

        function loadAdvocates() {
            displayAdvocates(sampleAdvocates);
        }

        function displayAdvocates(advocates) {
            const advocatesList = document.getElementById('advocatesList');
            
            if (advocates.length === 0) {
                advocatesList.innerHTML = '<div class="col-span-full text-center text-gray-500 py-8">No advocates found matching your criteria. All requests are visible to advocates across India.</div>';
                return;
            }
            
            advocatesList.innerHTML = advocates.map(advocate => `
                <div class="bg-white rounded-lg shadow-md p-6 card-hover">
                    <div class="flex items-center mb-4">
                        <div class="w-12 h-12 bg-blue-600 rounded-full flex items-center justify-center text-white font-bold text-lg">
                            ${advocate.name.split(' ')[1][0]}
                        </div>
                        <div class="ml-4">
                            <h3 class="text-lg font-semibold text-gray-800">${advocate.name}</h3>
                            <p class="text-gray-600 capitalize">${advocate.location}</p>
                        </div>
                    </div>
                    
                    <div class="space-y-2 mb-4">
                        <p class="text-sm"><span class="font-medium">Specialization:</span> ${advocate.specialization.charAt(0).toUpperCase() + advocate.specialization.slice(1)}</p>
                        <p class="text-sm"><span class="font-medium">Experience:</span> ${advocate.experience}</p>
                        <p class="text-sm"><span class="font-medium">Cases Handled:</span> ${advocate.cases}</p>
                        <div class="flex items-center">
                            <span class="text-sm font-medium">Rating:</span>
                            <div class="ml-2 flex items-center">
                                <span class="text-yellow-500">★★★★★</span>
                                <span class="ml-1 text-sm text-gray-600">${advocate.rating}</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="flex space-x-2">
                        <button onclick="openChatModal('${advocate.name}', '${advocate.phone}')" class="flex-1 bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition duration-300 text-sm">
                            💬 Message
                        </button>
                        <button onclick="makeCall('${advocate.phone}')" class="flex-1 bg-green-600 text-white py-2 px-4 rounded-lg hover:bg-green-700 transition duration-300 text-sm">
                            📞 Call
                        </button>
                    </div>
                </div>
            `).join('');
        }

        function loadBareActs() {
            displayBareActs(bareActs);
        }

        function searchActs() {
            const searchTerm = document.getElementById('actSearch').value.toLowerCase();
            const category = document.getElementById('actCategory').value;
            
            let filteredActs = bareActs;
            
            if (searchTerm) {
                filteredActs = filteredActs.filter(act => 
                    act.title.toLowerCase().includes(searchTerm) || 
                    act.description.toLowerCase().includes(searchTerm)
                );
            }
            
            if (category) {
                filteredActs = filteredActs.filter(act => act.category === category);
            }
            
            displayBareActs(filteredActs);
        }

        function displayBareActs(acts) {
            const actsList = document.getElementById('actsList');
            
            actsList.innerHTML = acts.map(act => `
                <div class="bg-white rounded-lg shadow-md p-6 card-hover">
                    <h3 class="text-lg font-semibold text-gray-800 mb-2">${act.title}</h3>
                    <p class="text-gray-600 mb-3">${act.description}</p>
                    <div class="flex justify-between items-center mb-4">
                        <span class="text-sm text-blue-600 bg-blue-100 px-2 py-1 rounded">${act.category.charAt(0).toUpperCase() + act.category.slice(1)}</span>
                        <span class="text-sm text-gray-500">${act.sections} sections</span>
                    </div>
                    <button onclick="viewAct('${act.title}')" class="w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition duration-300">
                        View Act
                    </button>
                </div>
            `).join('');
        }

        function loadCases() {
            displayCases(sampleCases);
        }

        function searchCases() {
            const searchTerm = document.getElementById('caseSearch').value.toLowerCase();
            const court = document.getElementById('courtFilter').value;
            const type = document.getElementById('caseType').value;
            
            let filteredCases = sampleCases;
            
            if (searchTerm) {
                filteredCases = filteredCases.filter(case_ => 
                    case_.title.toLowerCase().includes(searchTerm) || 
                    case_.description.toLowerCase().includes(searchTerm)
                );
            }
            
            if (court) {
                filteredCases = filteredCases.filter(case_ => case_.court === court);
            }
            
            if (type) {
                filteredCases = filteredCases.filter(case_ => case_.type === type);
            }
            
            displayCases(filteredCases);
        }

        function displayCases(cases) {
            const casesList = document.getElementById('casesList');
            
            casesList.innerHTML = cases.map(case_ => `
                <div class="bg-white rounded-lg shadow-md p-6">
                    <div class="flex justify-between items-start mb-3">
                        <h3 class="text-lg font-semibold text-gray-800">${case_.title}</h3>
                        <span class="text-sm text-gray-500">${case_.year}</span>
                    </div>
                    <p class="text-gray-600 mb-3">${case_.description}</p>
                    <div class="flex space-x-4 mb-4">
                        <span class="text-sm text-blue-600 bg-blue-100 px-2 py-1 rounded">${case_.court.charAt(0).toUpperCase() + case_.court.slice(1)} Court</span>
                        <span class="text-sm text-green-600 bg-green-100 px-2 py-1 rounded">${case_.type.charAt(0).toUpperCase() + case_.type.slice(1)}</span>
                    </div>
                    <button onclick="viewCase('${case_.title}')" class="bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition duration-300">
                        View Full Case
                    </button>
                </div>
            `).join('');
        }

